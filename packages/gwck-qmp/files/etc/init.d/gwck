START=99

BIN=/usr/bin/gwck

start()
{
	$BIN -l -f /etc/gwck/gwck_conf_qmp > /dev/null 2> /dev/null &
}

stop()
{
	$BIN -k
}

restart()
{
	stop
	start
}
